# SmartPPC Production Environment Configuration
# Copy this file to .env and customize the values
# NEVER commit .env to source control!

# ===========================================
# Application Settings
# ===========================================
APP_VERSION=latest
APP_PORT=8080
ASPNETCORE_ENVIRONMENT=Production

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_DB=smartppc
POSTGRES_USER=smartppc_user
POSTGRES_PASSWORD=YourSecurePasswordHere!
POSTGRES_PORT=5432

# ===========================================
# pgAdmin (Optional - for database management)
# ===========================================
PGADMIN_EMAIL=admin@smartppc.local
PGADMIN_PASSWORD=YourPgAdminPassword!
PGADMIN_PORT=5050
