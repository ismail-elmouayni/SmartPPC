@page
@using MudBlazor
@model SmartPPC.Api.Pages.Forecast.DemandForecastModel
@{
    ViewData["Title"] = "Demand Forecast";
}

<h1>Demand Forecast</h1>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<MudPopoverProvider>
    <component type="typeof(SmartPPC.Api.Pages.Forecast.DemandForecastComponent)"
               render-mode="ServerPrerendered"
               param-ModelInputs="Model.ModelInputs" />
</MudPopoverProvider>
